name: ðŸš€ Modern Vercel Deployment 2025

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main]
  workflow_dispatch:
    inputs:
      environment:
        description: "Deployment environment"
        required: true
        default: "preview"
        type: choice
        options:
          - preview
          - production

env:
  NODE_VERSION: "20"

jobs:
  # ðŸ§ª Quality Assurance Pipeline
  quality-check:
    name: ðŸ§ª Quality Assurance
    runs-on: ubuntu-latest

    steps:
      - name: ðŸ“¥ Checkout Repository
        uses: actions/checkout@v4

      - name: ðŸ”§ Setup Node.js ${{ env.NODE_VERSION }}
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: "npm"

      - name: ðŸ“¦ Install Dependencies
        run: npm ci --prefer-offline --no-audit

      - name: ðŸ” TypeScript Type Check
        run: npm run type-check

      - name: âœ¨ ESLint Validation
        run: npm run lint

      - name: ðŸ§ª Run Tests
        run: npm run test:ci || npm test || echo "No tests configured"
        continue-on-error: true

      - name: ðŸ—ï¸ Build Application
        run: npm run build

  # ðŸš€ Smart Deployment Pipeline
  deploy:
    name: ðŸš€ Smart Deployment
    runs-on: ubuntu-latest
    needs: quality-check
    if: github.ref == 'refs/heads/main' || github.event_name == 'workflow_dispatch'

    environment:
      name: ${{ github.ref == 'refs/heads/main' && 'production' || 'preview' }}

    outputs:
      deployment-url: ${{ steps.deploy.outputs.url }}

    steps:
      - name: ðŸ“¥ Checkout Repository
        uses: actions/checkout@v4

      - name: ðŸ”§ Setup Node.js ${{ env.NODE_VERSION }}
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: "npm"

      - name: ðŸ“¦ Install Dependencies
        run: npm ci --prefer-offline --no-audit

      - name: ðŸ—ï¸ Build Application
        run: npm run build

      - name: ðŸš€ Deploy to Vercel
        id: deploy
        run: |
          # Install Vercel CLI
          npm install -g vercel@latest

          # Deploy directly with auto-detection
          if [ "${{ github.ref }}" = "refs/heads/main" ] || [ "${{ github.event.inputs.environment }}" = "production" ]; then
            echo "ðŸŽ¯ Deploying to PRODUCTION"
            DEPLOYMENT_URL=$(vercel --prod --token=${{ secrets.VERCEL_TOKEN }} --confirm)
          else
            echo "ðŸŽ­ Deploying to PREVIEW"  
            DEPLOYMENT_URL=$(vercel --token=${{ secrets.VERCEL_TOKEN }} --confirm)
          fi

          echo "ðŸŒ Deployment URL: $DEPLOYMENT_URL"
          echo "url=$DEPLOYMENT_URL" >> $GITHUB_OUTPUT
        env:
          VERCEL_TOKEN: ${{ secrets.VERCEL_TOKEN }}

      - name: ðŸ“Š Deployment Summary
        run: |
          echo "ðŸ“Š Deployment Summary:"
          echo "======================"
          echo "ðŸ”¸ Repository: ${{ github.repository }}"
          echo "ðŸ”¸ Branch: ${{ github.ref_name }}"
          echo "ðŸ”¸ Commit: ${{ github.sha }}"
          echo "ðŸ”¸ Author: ${{ github.actor }}"
          echo "ðŸ”¸ Deployment URL: ${{ steps.deploy.outputs.url }}"
          echo "ðŸ”¸ Environment: ${{ github.ref == 'refs/heads/main' && 'Production' || 'Preview' }}"
          echo "ðŸ”¸ Workflow: ${{ github.workflow }}"
          echo "ðŸ”¸ Run ID: ${{ github.run_id }}"
