  "federal_regulations": {
    "cfpb": {
      "abusive_practices": {
        "definition": "Materially interferes with ability to understand or takes unreasonable advantage of consumer vulnerability",
        "prohibited_practices": [
          {
            "id": "material_interference",
            "description": "Actions that obscure, confuse, or hide information",
            "examples": [
              "Dark patterns in user interfaces",
              "Buried disclosure requirements",
              "Confusing fee structures",
              "Misleading progress indicators"
            ],
            "penalty_range": "$1,000,000 - $50,000,000",
            "enforcement_priority": "high"
          },
          {
            "id": "unreasonable_advantage",
            "description": "Exploiting consumer gaps in understanding or inability to protect interests",
            "examples": [
              "Targeting vulnerable populations",
              "Exploiting financial desperation",
              "Taking advantage of limited literacy",
              "Preying on elderly or disabled consumers"
            ],
            "penalty_range": "$5,000,000 - $100,000,000",
            "enforcement_priority": "critical"
          }
        ],
        "2025_updates": [
          "Algorithmic bias considered abusive practice",
          "Tip coercion explicitly prohibited",
          "Data harvesting for targeting vulnerable populations banned",
          "Confession of judgment clauses in consumer contracts prohibited"
        ]
      },

      "deceptive_practices": {
        "definition": "Likely to mislead consumers acting reasonably under the circumstances",
        "prohibited_practices": [
          {
            "id": "false_advertising",
            "description": "Misleading claims about loan terms or costs",
            "examples": [
              "Advertising 0% APR with mandatory tips",
              "Hiding true lender identity (rent-a-bank)",
              "False scarcity claims",
              "Fake urgency timers"
            ],
            "penalty_range": "$500,000 - $25,000,000",
            "enforcement_priority": "high"
          },
          {
            "id": "bait_and_switch",
            "description": "Advertising one product but delivering another",
            "examples": [
              "Advertised rate not available to typical borrower",
              "Terms change during application process",
              "Hidden fee revelation after commitment"
            ],
            "penalty_range": "$1,000,000 - $50,000,000",
            "enforcement_priority": "high"
          }
        ]
      },

      "unfair_practices": {
        "definition": "Causes substantial injury, not reasonably avoidable, not outweighed by benefits",
        "prohibited_practices": [
          {
            "id": "debt_trap_design",
            "description": "Business models designed around borrower failure",
            "examples": [
              "Short-term loans with balloon payments",
              "Automatic rollover defaults",
              "Inadequate underwriting leading to default",
              "Collection practices causing undue hardship"
            ],
            "penalty_range": "$10,000,000 - $200,000,000",
            "enforcement_priority": "critical"
          }
        ]
      },

      "fintech_specific_rules": {
        "earned_wage_access": {
          "tip_requirements": "Tips must be genuinely voluntary with prominent $0 option",
          "disclosure_requirements": "True APR must be disclosed if tips collected >10% of time",
          "employer_partnership": "Clear disclosure of data sharing with employers",
          "frequency_limits": "Maximum 3 advances per pay period"
        },
        "algorithmic_lending": {
          "bias_testing": "Annual testing for discriminatory outcomes required",
          "explainability": "Consumers have right to understand decision factors",
          "human_review": "Right to human review of automated adverse decisions",
          "data_minimization": "Only collect data necessary for lending decision"
        },
        "marketplace_lending": {
          "true_lender_disclosure": "Must clearly identify actual lender",
          "lead_generation": "Clear disclosure if platform sells consumer data",
          "broker_fees": "All broker/platform fees must be disclosed",
          "investor_protection": "Clear separation of consumer and investor interests"
        }
      }
    },

