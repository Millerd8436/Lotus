  "major_loopholes": {
    "rent_a_bank": {
      "name": "Rent-a-Bank Schemes",
      "description": "Payday lenders partner with banks in states with no usury caps to export high rates to states with caps",
      "how_it_works": [
        "Lender partners with bank in Utah, Delaware, or South Dakota",
        "Bank technically originates the loan",
        "Loan is immediately sold to the payday lender",
        "Lender claims federal preemption of state usury laws"
      ],
      "examples": [
        {
          "lender": "OppFi",
          "bank": "FinWise Bank (Utah)",
          "rates": "Up to 160% APR in states with 36% caps"
        },
        {
          "lender": "Elevate Credit",
          "bank": "Republic Bank & Trust",
          "rates": "Up to 149% APR"
        }
      ],
      "regulatory_response": "FDIC and OCC issued 'true lender' rule but it's being challenged"
    },
    "tribal_sovereignty": {
      "name": "Tribal Lending Loophole",
      "description": "Lenders claim tribal sovereign immunity to avoid state laws",
      "how_it_works": [
        "Non-tribal lenders partner with Native American tribes",
        "Loans are allegedly made on tribal land",
        "Lenders claim immunity from state laws and courts",
        "Tribes typically receive 1-2% of revenue"
      ],
      "examples": [
        {
          "lender": "Big Picture Loans",
          "tribe": "Lac Vieux Desert Band",
          "rates": "Up to 800% APR"
        },
        {
          "lender": "Mobiloans",
          "tribe": "Tunica-Biloxi Tribe",
          "rates": "Up to 600% APR"
        }
      ],
      "court_challenges": "Several states have successfully challenged this in court"
    },
    "credit_service_organizations": {
      "name": "Credit Service Organization (CSO) Model",
      "description": "Used primarily in Texas and Ohio to evade rate caps",
      "how_it_works": [
        "Payday lender registers as a CSO, not a lender",
        "CSO 'arranges' a loan with a third-party lender",
        "CSO charges massive 'fees' for this service",
        "Total cost exceeds state interest rate caps"
      ],
      "impact": "Texas has some of the highest payday loan rates due to this loophole"
    },
    "open_end_credit": {
      "name": "Open-End Line of Credit",
      "description": "Structured as credit lines instead of loans to avoid regulations",
      "how_it_works": [
        "Product is structured as a line of credit, not a loan",
        "Different regulations apply to open-end credit",
        "Minimum payment requirements trap borrowers",
        "Effective APRs can exceed 400%"
      ],
      "examples": [
        "Advance America Line of Credit",
        "Check Into Cash Flex Loans"
      ]
    },
    "choice_of_law": {
      "name": "Choice of Law Provisions",
      "description": "Contracts specify that laws of lender-friendly states apply",
