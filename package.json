    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.1.0",
    "mockserver-client": "^5.15.0",
    "msw": "^2.0.11",
    "nodemon": "^3.0.2",
    "prettier": "^3.0.0",
