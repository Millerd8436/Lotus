{
  "name": "lotus-comprehensive",
  "version": "3.0.0-comprehensive",
  "description": "Comprehensive 3-Phase Lotus Payday Loan Simulator - Educational Platform with 96,000+ line advanced analysis",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "validate-comprehensive": "node validate-comprehensive.js",
    "validate:full": "npm run type-check && npm run lint && npm run test:ci",
    "deploy": "vercel --prod",
    "deploy:vercel": "vercel --prod",
    "deploy:railway": "node scripts/deploy-railway.js",
    "deploy:static": "NEXT_EXPORT=1 npm run build",
    "analyze": "ANALYZE=true next build",
    "analyze:server": "BUNDLE_ANALYZE=server next build",
    "analyze:browser": "BUNDLE_ANALYZE=browser next build",
    "vercel:env": "vercel env pull .env.local",
    "vercel:link": "vercel link",
    "vercel:preview": "vercel",
    "vercel:prod": "vercel --prod",
    "deploy:smart": "node scripts/smart-deploy.js",
    "deploy:check": "npm run type-check && npm run lint",
    "deploy:build": "npm run deploy:check && npm run build",
    "deploy:fast": "vercel --prod --force",
    "deploy:status": "vercel ls",
    "deploy:logs": "vercel logs",
    "deploy:open": "vercel open",
    "export": "next export",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "commit": "cz",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "legacy:analyze": "node scripts/analyze-legacy.js",
    "legacy:integrate": "node scripts/integrate-legacy.js",
    "legacy:test": "node scripts/test-legacy-integration.js",
    "orchestrator:test": "node scripts/test-orchestrator.js",
    "comprehensive:validate": "node scripts/validate-comprehensive-system.js",
    "clean": "rm -rf .next out dist coverage",
    "clean:all": "npm run clean && rm -rf node_modules",
    "turbo:build": "turbo run build",
    "turbo:test": "turbo run test",
    "turbo:lint": "turbo run lint",
    "lighthouse": "lighthouse http://localhost:3000 --view",
    "lighthouse:ci": "lhci autorun",
    "health": "curl -f http://localhost:3000/api/health || exit 1",
    "security:audit": "npm audit --audit-level=critical",
    "security:headers": "node scripts/check-headers.js",
    "monitor": "node scripts/monitor.js",
    "rollback": "node scripts/rollback.js",
    "env:check": "node scripts/check-env.js",
    "env:setup": "node scripts/setup-env.js",
    "precommit": "npm run lint && npm run type-check",
    "fresh": "npm run clean && npm install && npm run build",
    "setup": "chmod +x scripts/setup-deployment.sh && ./scripts/setup-deployment.sh",
    "debug:api": "next dev --port 3001",
    "debug:frontend": "next dev --port 3002",
    "debug:build": "next build --debug",
    "debug:production": "next start --port 3003",
    "test:api": "jest app/api --watch",
    "test:components": "jest components --watch",
    "lint:api": "eslint app/api/**/*.ts",
    "lint:components": "eslint components/**/*.tsx"
  },
  "dependencies": {
    "@jest/globals": "^30.0.5",
