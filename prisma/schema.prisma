// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL") // vercel postgres
}

model User {
  id              String   @id @default(cuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  simulations     LoanSimulation[]
  quizResponses   QuizResponse[]
  interactionEvents InteractionEvent[]
}

model LoanSimulation {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  simulationType  String   // "QuickLoan" or "FairLend"
  formData        Json
  createdAt       DateTime @default(now())
}

model QuizResponse {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  questionId    String
  selection     String?
  confidence    Int?
  clarity       Int?
  surprise      Int?
  openEnded     String?
  timeTaken     Float
  createdAt     DateTime @default(now())
}

model InteractionEvent {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  eventType     String   // e.g., "click", "scroll", "hover"
  elementId     String   // The ID of the element that was interacted with
  timestamp     DateTime @default(now())
} 