{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ğŸŒ¸ Start Lotus Development Server",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": "\\[(\\d+):(\\d+):(\\d+)\\]\\s+(.*)",
              "file": 1,
              "line": 2,
              "column": 3,
              "message": 4
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".*webpack.*",
            "endsPattern": ".*Ready.*"
          }
        }
      ],
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Start Development Server",
      "type": "shell",
      "command": "npx serve . --live --port 8080",
      "group": "build",
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "ğŸ”§ Type Check",
      "type": "shell",
      "command": "npm",
      "args": ["run", "type-check"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "ğŸ§¹ Lint & Fix",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint:fix"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "ğŸ¨ Format Code",
      "type": "shell",
      "command": "npm",
      "args": ["run", "format"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "ğŸ§ª Run All Tests",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:ci"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸ­ E2E Tests",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test:e2e"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "âœ… Validate Comprehensive System",
      "type": "shell",
      "command": "npm",
      "args": ["run", "validate-comprehensive"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "ğŸ”— Integrate Legacy System",
      "type": "shell",
      "command": "npm",
      "args": ["run", "legacy:integrate"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "ğŸ“Š Analyze Bundle",
      "type": "shell",
      "command": "npm",
      "args": ["run", "analyze"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "ğŸ—ï¸ Build Production",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$tsc", "$eslint-stylish"]
    },
    {
      "label": "ğŸš€ Deploy to Vercel",
      "type": "shell",
      "command": "npm",
      "args": ["run", "deploy"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "ğŸ§½ Clean Project",
      "type": "shell",
      "command": "npm",
      "args": ["run", "clean"],
