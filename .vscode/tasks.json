    {
      "label": "ğŸŒ¸ Full Quality Check",
      "type": "shell",
      "command": "npm",
      "args": ["run", "validate:full"],
      "group": "test",
      "dependsOrder": "sequence",
      "dependsOn": ["ğŸ”§ Type Check", "ğŸ§¹ Lint & Fix", "ğŸ§ª Run All Tests"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ]
}
