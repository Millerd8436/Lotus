      "program": "${workspaceFolder}/scripts/test-legacy-integration.js",
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true
    },
    {
      "name": "âœ… Debug Validation Script",
      "type": "node",
