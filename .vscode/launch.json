{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ðŸŒ¸ Debug Lotus App",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/next",
      "args": ["dev"],
      "console": "integratedTerminal",
      "env": {
        "NODE_ENV": "development"
      },
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "ðŸ§ª Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--runInBand", "--no-cache"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "CI": "true"
      },
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "ðŸŽ­ Debug Playwright Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/playwright",
      "args": ["test", "--debug"],
      "console": "integratedTerminal",
      "env": {
        "PWDEBUG": "1"
      },
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "name": "ðŸ“Š Debug Legacy Integration",
      "type": "node",
